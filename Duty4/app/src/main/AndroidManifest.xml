<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dot.kun.jun.duty4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"/>
        <activity android:name=".homepindah.GridActivity"
            android:label="Grid Layout"
            android:theme="@style/Mytheme"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".homepindah.ColapsActivity"
            android:label="Colapsing Toolbar"
            android:theme="@style/Mytheme"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".homepindah.ClickActivity"
            android:theme="@style/Mytheme"
            android:label="Clicked Grid"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".homepindah.CircleActivity"
            android:theme="@style/Mytheme"
            android:label="Circle Menu"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".homepindah.StagActivity"
            android:theme="@style/Mytheme"
            android:label="Staggered Layout"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
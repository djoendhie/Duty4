<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    tools:context="com.dot.kun.jun.duty4.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="130dp" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="cursive"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="Djoe`s"
            android:textColor="#ffff"
            android:textSize="60dp"
            android:textStyle="italic" />
        <View
            android:layout_below="@+id/tv"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="#ffff"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/card"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imggrid"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_view_quilt_cyan_300_24dp" />

            <TextView
                android:id="@+id/txtgrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imggrid"
                android:fontFamily="casual"
                android:text="Grid Toogle"
                android:textSize="20dp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="#00000000"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#00000000"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgtool"
                android:src="@drawable/toolbar"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txttool"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgtool"
                android:text="Colapsing Toolbar"
                android:textSize="20dp"
                android:textStyle="italic"
                android:fontFamily="casual"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/card"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imggridclick"
                android:src="@drawable/grid"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtgridclick"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imggridclick"
                android:text="Click on Grid"
                android:textSize="20dp"
                android:textStyle="italic"
                android:fontFamily="casual"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/card"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgmenu"
                android:src="@drawable/ic_donut_small_cyan_300_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtmenu"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgmenu"
                android:text="Circle Menu"
                android:textSize="20dp"
                android:textStyle="italic"
                android:fontFamily="casual"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/card"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgstag"
                android:src="@drawable/ic_dashboard_cyan_300_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtstag"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgstag"
                android:text="Staggered"
                android:textSize="20dp"
                android:textStyle="italic"
                android:fontFamily="casual"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/card"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imgstaghor"
                android:src="@drawable/ic_dashboard_cyan_300_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtstaghor"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgstaghor"
                android:text="Staggered Horizontal"
                android:textSize="20dp"
                android:textStyle="italic"
                android:fontFamily="casual"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
